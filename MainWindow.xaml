<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TTS Client" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <ComboBox x:Name="VoiceComboBox" 
                      SelectionChanged="VoiceComboBox_SelectionChanged"
                      Margin="0,0,0,10"/>
            <TextBox x:Name="TextInput" 
                     Height="100" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,0,0,10"/>
            <Button Content="Speak" 
                    Click="SpeakButton_Click"
                    Height="30"/>
            <TextBlock x:Name="StatusText" 
                      Margin="0,10,0,0"
                      TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window> 